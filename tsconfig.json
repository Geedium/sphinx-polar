{
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": ".",
        "target": "ESNext",
        "lib": ["ES2015"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}